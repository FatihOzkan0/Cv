@using EntityLayer.Concrete
@model List<Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>KULLANICI ADI</th>
        <th>ŞİFRE</th>
       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.UserName</td>
            <td>@item.Password</td>
            

            <td><a href="/Admin/AdminDelete/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/AdminEdit/@item.ID" class="btn btn-success">Düzenle</a></td>
        </tr>
    }


</table>

<br />
<a href="/Admin/AdminAdd" class="btn btn-primary">Admin Ekle</a>



