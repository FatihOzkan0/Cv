@using EntityLayer.Concrete
@model List<SocialMedia>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>LINK</th>
        <th>ICON</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Link</td>
            <td>@item.Icon</td>
            

            <td><a href="/SocialMedia/SocialMediaDelete/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/SocialMedia/SocialMediaEdit/@item.Id" class="btn btn-success">Düzenle</a></td>
        </tr>
    }


</table>

<br />
<a href="/SocialMedia/SocialMediaAdd" class="btn btn-primary">Platform Ekle</a>


