@using EntityLayer.Concrete
@model List<About>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br/>
<br/>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Adres</th>
        <th>Telefon</th>
        <th>Mail</th>
        <th>Açıklama</th>
        <th>Image</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td>@item.Mail</td>
            <td>@item.Description</td>
            <td>@item.Image</td>
            <td><a href="/About/AboutDelete/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/About/AboutEdit/@item.ID" class="btn btn-success">Düzenle</a></td>
        </tr>
    }


</table>

<a href="/About/AboutAdd" class="btn btn-primary">Yeni Hakkında Ekle</a>

